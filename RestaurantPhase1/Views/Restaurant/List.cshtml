@using RestaurantPhase1.Models
@model IEnumerable<Restaurant>
@{
    ViewBag.Title = "List";
}
<link href="~/Content/backgroundOflist.css" rel="stylesheet" />
    
        <!-- /.row -->
        <!-- Project One -->
       @foreach (var item in Model)
       {
        <div class="row" style="margin-top:100px">
            <div class="col-md-7" style="padding-left:120px" >
                <a href="#">
                    <img class="img-responsive" src="~/assets/RestaurantsPicture/@item.Image1" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>Restaurant Name: @item.Name.ToUpperInvariant()</h3>
                <h4>Address: @item.Area  ,  @item.City</h4>
                <h4>Type: @item.Type</h4>
                <p>Description: @item.Description</p>
                <a class="btn btn-primary" href="#">View Detail/Menus <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
       }
        <!-- /.row -->

        <hr>
        
                    @if (Model.Count() == 0)
                    {   <div class="row">
                        <div class="col-lg-offset-4 col-lg-5" style="margin-top:50px;">
                        <h3>Opps! Cannot find any resaurant</h3>
                         </div>
    </div>
                    }
                    <hr>
                