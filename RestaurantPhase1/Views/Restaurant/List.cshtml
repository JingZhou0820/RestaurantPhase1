@using RestaurantPhase1.Models
@model IEnumerable<Restaurant>
@{
    ViewBag.Title = "List";
}
<link href="~/Content/backgroundOflist.css" rel="stylesheet" />
    
        <!-- /.row -->
        <!-- Project One -->
       @foreach (var item in Model)
       {
        <div class="row" style="margin-top:100px">
            <div class="col-md-7" style="padding-left:120px" >
                <a href="#">
                    <br/>
                    <img class="img-responsive" src="~/assets/RestaurantsPicture/@item.Image1" alt="">
                </a>
            </div>
            <div class="col-md-5" style="font-family:Arial">
                <h3> @item.Name.First().ToString().ToUpper()@item.Name.Substring(1)</h3>
                <h4 style="color:gray">Area: @item.Area.First().ToString().ToUpper()@item.Area.Substring(1)  , 
                 @item.City.First().ToString().ToUpper()@item.City.Substring(1)</h4>
                <h4 style="color:gray">Type: @item.Type.First().ToString().ToUpper()@item.Type.Substring(1)</h4>
                <p style="color:gray">Description: @item.Description</p>
                <a class="btn btn-primary" href="#">View Detail/Menus <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
       }
        <!-- /.row -->

        <hr>
        
                    @if (Model.Count() == 0)
                    {   <div class="row">
                        <div class="col-lg-offset-4 col-lg-5" style="margin-top:50px;">
                        <h3>Opps! Cannot find any resaurant</h3>
                         </div>
    </div>
                    }
                    <hr>
                